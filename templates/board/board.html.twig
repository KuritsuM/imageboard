{% extends 'base.html.twig' %}

{% block title %}{{ boardName }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    #textarea { }
    .posts {
        display: flex;
        flex-direction: column;
    }

    .post {
        display: block;
        max-width: 786px;
        box-sizing: content-box;
        flex-direction: column;
        margin: 3px 5px 5px 5px;
        background-color: #236e95;
        color: #e0e0e0;
        border-radius: 4px;
        word-break: break-word;
        word-wrap: break-word;
    }

    .post_info {
        display: flex;
        flex-direction: row;
        padding: 5px;
    }

    .post_id {
        margin-left: 5px;
    }

    .post_time {
        margin-left: 7px;
    }

    .response {
        text-decoration: none;
        color: rgba(198, 129, 26, 0.84);
    }

    .post_text {
        max-height: 200px;
        overflow: auto;
        padding: 16px;
        display: block;
    }
</style>

    <div class="example-wrapper">
        <a href="{{ path('board_main', { 'board': boardName }) }}">{{ boardName }}</a>
    </div>

    {{ form_start(thread_form) }}
        {{ form_row(thread_form.theme, { 'label' : ' ' }) }}
        {{ form_row(thread_form.text, {'label' : ' '}) }}
        {{ form_row(thread_form.file1, {'label' : ' '}) }}
        {{ form_row(thread_form.send, {'label' : 'DONT SEND'}) }}
    {{ form_end(thread_form) }}
   <!--- <div class="create_post_form">
        <form method="post" action="{{ path('createThread', { 'board' : boardName }) }}">
            <input type="text" id="theme" name="theme">
            <input type="submit" id="submit" name="submit"><br/>
            <textarea id="text" name="text"></textarea>
        </form>
    </div>
    --->
    <div class="posts">
        {% for thread in threads %}
            <div class="post">
                <div class="post_info">
                    <div class="post_id" id="{{ thread.id }}">
                        {{ thread.Id }}
                    </div>
                    <div class="post_time">
                        {{ thread.FormatedCreatedAt }}
                    </div>
                    <a class="response" href="{{ path('thread_view', { 'board': boardName, 'thread_id': thread.id }) }}">Ответить</a>
                </div>
                {% if thread.Theme != null%}
                <article class="post_text">{{ thread.Theme }}</article>
                {% endif %}
                <br/>
                {% if thread.File1 != null %}
                <img src="{{ asset('uploaded/') ~ thread.File1 }}" alt="{{ thread.File1 }}"/>
                {% endif %}
                <article class="post_text">{{ thread.Text }}</article>
            </div>
        {% endfor %}
    </div>
{% endblock %}
